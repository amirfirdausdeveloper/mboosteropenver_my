<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/country_flag_w"
            android:layout_height="@dimen/country_flag_h"
            android:background="@android:color/transparent"
            android:src="@color/colorOrangeTitle"
            android:layout_marginTop="@dimen/country_flag_m_top"
            android:layout_marginBottom="@dimen/country_flag_m_space"
            android:layout_marginStart="@dimen/country_flag_m_side"
            android:layout_marginEnd="@dimen/country_flag_m_side"
            />

        <ImageButton
            android:layout_width="@dimen/country_flag_w"
            android:layout_height="@dimen/country_flag_h"
            android:background="@android:color/transparent"
            android:src="@color/colorOrangeTitle"
            android:layout_marginBottom="@dimen/country_flag_m_space"
            android:layout_marginTop="@dimen/country_flag_m_top"
            android:layout_marginStart="@dimen/country_flag_m_side"
            android:layout_marginEnd="@dimen/country_flag_m_side"

            />

    </LinearLayout>

</RelativeLayout>